<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#2FFF9800">

    <ImageView
        android:id="@+id/tweet_profile_img"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/profile_image_description"
        tools:srcCompat="@tools:sample/avatars[15]" />

    <TextView
        android:id="@+id/tweet_user_name"
        android:layout_width="286dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/tweet_profile_img"
        android:background="#BCFFFFFF"
        android:text="@string/generic_test_string"
        android:textAlignment="viewStart"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tweet_body_text"
        android:layout_width="284dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/tweet_profile_img"
        android:background="#BCFFFFFF"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="lorem ipsum ajflksj akdjf lkjsalf  kdlaksjdflkajsd  lsjdflkasj lkljdfkn n nncncnc dh dsfasdfasdf  jddf jksfjsldkfj  lsdjkf sierh "
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/retweet_count"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#90DC39"
        android:clickable="false"
        android:shadowColor="#00FFFFFF"
        android:text="1030485"
        android:textColorLink="#A6FFFFFF"
        app:icon="@drawable/ic_loop_24px" />

    <Button
        android:id="@+id/likes_count"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="204dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#03A9F4"
        android:clickable="false"
        android:shadowColor="#00FFFFFF"
        android:text="1030485"
        app:icon="@drawable/ic_favorite_24px" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_profile_img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#E91E63"
        app:icon="@drawable/ic_star_border_24px"
        app:iconSize="28sp"
        app:iconTint="#FFFFFF" />

</RelativeLayout>