<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_window_info"
    android:layout_width="180dp"
    android:layout_height="130dp"
    android:layout_marginStart="104dp"
    android:layout_marginEnd="68dp"
    android:background="#00EB0F0F">

    <TextView
        android:id="@+id/user_window_info_friends_count"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="14dp"
        android:text="1234567"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_window_info_followers_count"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_window_info_followers"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        android:text="1234567"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_window_info_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="103dp"
        android:text="Followers"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_window_info_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_window_info_friends_count"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="Friends"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>