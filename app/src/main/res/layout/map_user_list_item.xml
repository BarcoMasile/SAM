<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_user_list_item"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="#2FFF9800">

    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/profile_image_description"
        tools:srcCompat="@tools:sample/avatars[15]" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="286dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/user_profile_img"
        android:background="#BCFFFFFF"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="@string/generic_test_string"
        android:textAlignment="viewStart"
        android:textSize="28sp" />

    <Button
        android:id="@+id/followers_count"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/user_profile_img"
        android:backgroundTint="#E91E63"
        android:clickable="false"
        android:shadowColor="#00FFFFFF"
        android:text="1030485"
        app:icon="@drawable/tw__composer_logo_white"
        app:iconSize="22sp" />

</RelativeLayout>